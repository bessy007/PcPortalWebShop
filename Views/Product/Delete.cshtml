@model Product

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="title">Title</label>
            <input asp-for="title" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="category">Category</label>
            <input asp-for="category" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="manufacturer">Manufacturer</label>
            <input asp-for="manufacturer" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="price">Price</label>
            <input asp-for="price" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="salePrice">Sale price</label>
            <input asp-for="salePrice" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}