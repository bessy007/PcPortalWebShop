@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}
<div class="productlist">
    <h2 class="">Product List</h2>
</div>
<div class="" >
        <div class="addpro">
            <a asp-controller="Product" asp-action="Add" class="btn btn-primary">
            Add new product
            </a>
        </div>
    
    @foreach(var obj in Model)
    {
        <div class="container1">
            <img class="pc1" src="~/product-photos/@obj.ImgName()" alt="">
            <p class="teksti1">
                @obj.title
            </p>
            <p class="oldprice">

            </p>
            <p class="newprice">
                @obj.price
            </p>
            <div class="sale-container">
        
            </div>
            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id"
            class=""> <i class="bi bi-pencil"></i>Edit</a>
            <p class="shipping">
                Free Shipping
            </p>
            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"
            class=""> <i class="bi bi-trash"></i>Delete</a>
        </div>
    }
    <br /><br />
</div>
